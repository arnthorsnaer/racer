{
  "name": "racer",
  "version": "1.0.0",
  "type": "module",
  "description": "Icelandic typing racer game",
  "main": "index.ts",
  "scripts": {
    "start": "bun run index.ts",
    "demo": "bun run demo/index.ts",
    "dev": "bun --watch index.ts",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run test:run",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write ."
  },
  "dependencies": {
    "@types/play-sound": "^1.1.2",
    "keypress": "^0.2.1",
    "play-sound": "^1.1.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/bun": "^1.3.1",
    "@types/keypress": "^2.0.30",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "bun-types": "^1.0.0",
    "tsx": "^4.20.6",
    "vitest": "^4.0.3"
  }
}
